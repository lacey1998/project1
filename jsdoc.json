{
    "source": {
        "include": ["src", "cli.js"],
        "includePattern": ".js$"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "./docs/",
        "recurse": true,
        "readme": "README.md"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true
    }
} 