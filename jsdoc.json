{
    "source": {
        "include": ["src", "cli.js"],
        "includePattern": ".js$"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "destination": "./docs/",
        "recurse": true,
        "readme": "README.md",
        "template": "templates/default"
    },
    "templates": {
        "cleverLinks": true,
        "monospaceLinks": true,
        "default": {
            "includeDate": false,
            "outputSourceFiles": true
        }
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
} 